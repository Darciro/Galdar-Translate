{
    "name": "Galdar Translate",
    "version": "2.0",
    "description": "TODO",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [
            "jquery-3.3.1.min.js",
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": [
            "jquery-3.3.1.min.js",
            "content.js"
        ],
        "run_at": "document_end"
    }],
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Galdar Translate!"
    }
}
